<?php
namespace FCOM\IcomBundle\Entity;

use Doctrine\ORM\Mapping as ORM;
use Symfony\Component\Validator\Constraints as Assert;
use Symfony\Bundle\FrameworkBundle\Controller\Controller;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\File\UploadedFile;
use Symfony\Component\HttpFoundation\File\File;

/**
 * @ORM\Entity
 */
class Document
{
    /**
     * @ORM\Id
     * @ORM\Column(type="integer")
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;
    /**
     * @var string
     * @ORM\Column(type="string", length=255)
     *
     */
    private   $name;
    /**
     * @var string
     * @ORM\Column(type="string", length=255)
     */
    private   $path;
    
    /**
     * @Assert\File(maxSize="6000000")
     */
    private $file;

    public function getId()
    {
        return $this->id;
    }

    /**
     * Set nombre
     *
     * @param string $path
     * @return Document
     */
    public  function setPath($path)
    {
        $this->path = $path;
        
        return $this;
    }
    /**
     * Set nombre
     *
     * @param string $name
     * @return Document
     */

    public function setName($name)
    {
        $this->name = $name;
        
        return $this;
    }


    public function getAbsolutePath()
    {
        return null === $this->path ? null : $this->getUploadRootDir() . '/' . $this->path;
    }

    public function getWebPath()
    {
        return null === $this->path ? null : $this->getUploadDir() . '/' . $this->path;
    }

    public function getUploadRootDir()
    {
    // la ruta absoluta del directorio donde se deben guardar los archivos cargados
        return __DIR__ . '/../../../../web/' . $this->getUploadDir();
    }
    public function getUploadDir()
    {
    // se libra del __DIR__ para no desviarse al mostrar â€˜doc/imageâ€˜ en la vista.
        return 'uploads/documents';
    }
    public  function Upload(Request $request)
    {
        //Instancio la clase File
        $form = $request->files->get('file');
        $file = new File($form);
            
    
        //Muevo el Archivo Hacia la Carpeta uploads/document
        $file->move($this->getUploadRootDir(), $form->getClientOriginalName());
    
        //llenos los valores de mi tabla con el nombre del archivo y la direccion
        $this->setPath($this->getUploadDir());
        $this->setName($form->getClientOriginalName());
             
       
    }
    
   

    /**
     * Get name
     *
     * @return string 
     */
    public  function getName()
    {
        return $this->name;
    }

    /**
     * Get path
     *
     * @return string 
     */
    public  function getPath()
    {
        return $this->path;
    }
}
