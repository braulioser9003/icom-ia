{% extends 'plantillas/Backend/bakendPrincipal.html.twig' %}
{% block stylepage %}
    {{ parent() }}
    <link href="{{ asset('bundles/fcomicom/metronic/assets/admin/pages/css/timeline-old.css') }}" rel="stylesheet"
          type="text/css"/>
    <link rel="stylesheet" type="text/css"
          href="{{ asset('bundles/fcomicom/metronic/assets/global/plugins/jquery-nestable/jquery.nestable.css') }}"/>
{% endblock %}
{% block contentTitle %}
    Programa Científicos de los Poster

{% endblock %}
{% block pagecontent %}
    {{ parent() }}

    <div class="portlet-title" id="form_wizard_1" style="margin: 40px 0 0 0;">
    <div class="portlet-title">
        <div class="caption">

        </div>
        <div class="tools hidden-xs">
            <a href="javascript:;" class="collapse">

            </a>
            <a href="#portlet-config" data-toggle="modal" class="config">
            </a>
            <a href="javascript:;" class="reload">
            </a>
            <a href="javascript:;" class="remove">
            </a>
        </div>
    </div>
    <div class="portlet-body form">
    <form action="#" class="form-horizontal" id="submit_form" method="POST">
    <div class="form-wizard">
    <div class="form-body">
    <ul class="nav nav-pills nav-justified steps">
        {% for dias in dia %}
            <li>
                <a href="#tab{{ dias.id }}" data-toggle="tab" class="step">

                </a>
            </li>
        {% endfor %}
    </ul>

    <div class="tab-content">
        {% for dias in dia %}

            <div class="tab-pane active" id="tab{{ dias.id }}">
                <div class="">
                    <div class="row">
                        <div class="col-md-offset-5 col-md-2">
                            <div class="profile-sidebar">
                                <!-- PORTLET MAIN -->
                                <div class="portlet light profile-sidebar-portlet"
                                     style="margin: -76px  0 0 0;">

                                    <!-- SIDEBAR USERPIC -->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <!-- BEGIN Portlet PORTLET-->

                                            <i class="icon-calendar" style="font-size: 60px;"></i>

                                            <div>
                                                <strong>
                                                    <h1 style="float: left; position: absolute; margin: 0 0 0 -21px">{{ dias.dia|date('d') }}</h1>
                                                </strong>
                                                <strong>
                                                    <h1 style="padding: 0 0 0 22px;"> {{ dias.dia|date('M') }}</h1>
                                                </strong>
                                            </div>

                                            <!-- END Portlet PORTLET-->
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-10" style="margin: -46px 0 0 -75px;">
                                            <button class="btn btn-circle btn-icon-only btn-default button-previous"
                                                    type="button"
                                                    style="margin: 0 0 0 0; position: absolute;"><i
                                                        class="fa fa-angle-left"
                                                        style="font-size: 24px;"></i></button>
                                            <button class="btn btn-circle btn-icon-only btn-default button-next"
                                                    type="button" style="margin: -2px 0 0 179px;"><i
                                                        class="fa fa-angle-right"
                                                        style="font-size: 24px;"></i></button>
                                        </div>
                                    </div>
                                    <!-- END SIDEBAR USERPIC -->

                                    <!-- SIDEBAR BUTTONS -->
                                    <div class="profile-userbuttons">


                                    </div>

                                </div>
                            </div>


                        </div>
                    </div>
                </div>







                {% for salas in sala %}
                    {% if salas.tipoActividad == 'Publicación de Poster' %}
                        {% if dias.id == salas.dia.id %}
                            {% if salas.intervalo|length != 0 %}

                                <div class="portlet light bordered">
                                    <div class="portlet-title">
                                        <div class="caption font-green-sharp">

                                            <span class="caption-subject bold font-blue-hoki uppercase"> {{ salas.nombre }}</span>
                                        </div>

                                        <div class="actions">
                                            <button type="submit" class="btn btn-circle btn-default">
                                                <i class="icon-trash"></i> Eliminar
                                            </button>

                                            <a href="#" class="btn btn-circle btn-default">
                                                <i class="fa fa-plus"></i> Add </a>
                                        </div>

                                    </div>
                                    <div class="portlet-body">

                                        <div class="scroller" data-rail-visible="1"
                                             data-rail-color="yellow" data-handle-color="#a1b2bd">

                                            <div class="col-lg-12 col-md-3 col-sm-6 col-xs-12">
                                                <div class="dashboard-stat2">
                                                    <div class="progress-info">
                                                        {% for intervalos in salas.intervalo %}

                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <ul class="timeline ">


                                                                        <li class="timeline-blue {% if  loop.index == intervalos|length %} timeline-noline {% endif %}">
                                                                            <div class="timeline-time">
                                                                                                <span class="date">
                                                                                                4/10/13 </span>

                                                                                <h2>{{ intervalos.horaInicio | date('h:i') }} - {{ intervalos.horaFinal | date('h:i') }} </h2>


                                                                                <h1>

                                                                                </h1>

                                                                            </div>
                                                                            <div class="timeline-icon">
                                                                                {{ loop.index }}

                                                                            </div>
                                                                            {% for ponencia in  ponencias %}
                                                                                {% if ponencia.modalidad == 'Poster' %}
                                                                                    {% if ponencia.intervalo.id == intervalos.id %}
                                                                                        <div class="timeline-body">
                                                                                            <div class="portlet portlet-sortable light bg-inverse ">
                                                                                                <div class="portlet-title">

                                                                                                    <div class="caption col-md-0">
                                                                                                        <i class="icon-docs font-blue-hoki"
                                                                                                           style="font-size: 25px;"></i>
                                                                                                    </div>
                                                                                                    <div class="caption col-md-10">
                                                                                                        <p class="lead font-blue-madison">
                                                                                                            {{ ponencia.titulo }}
                                                                                                        </p>

                                                                                                    </div>
                                                                                                    <div class="tools">
                                                                                                        <a href=""
                                                                                                           class="collapse">
                                                                                                        </a>
                                                                                                        <a href="#portlet-config"
                                                                                                           data-toggle="modal"
                                                                                                           class="config">
                                                                                                        </a>
                                                                                                        <a href=""
                                                                                                           class="reload">
                                                                                                        </a>
                                                                                                        <a href=""
                                                                                                           class="fullscreen">
                                                                                                        </a>
                                                                                                        <a href=""
                                                                                                           class="remove">
                                                                                                        </a>
                                                                                                    </div>
                                                                                                </div>
                                                                                                <div class="portlet-body">
                                                                                                    {% for autor in ponencia.autor %}
                                                                                                        <div class="portlet">
                                                                                                            <div class="portlet-title">
                                                                                                                <div class="caption">
                                                                                                                    <i class="ace-icon glyphicon glyphicon-user" data-icon-show="fa-plus" data-icon-hide="fa-minus" style="font-size: 25px; color: #49586A; margin: 10px 5px -13px  0;"></i>
                                                                                                                    <h4 class="widget-title lighter col-md-12" style="margin: 0 0 0 20px;">{{ autor.nombre }} {{ autor.apellidos }}</h4>
                                                                                                                </div>
                                                                                                                <div class="tools">
                                                                                                                    <a href="javascript:;" class="expand">
                                                                                                                    </a>
                                                                                                                </div>
                                                                                                            </div>
                                                                                                            <div class="portlet-body display-hide">
                                                                                                                <div class="row">
                                                                                                                    <div class="widget-main padding-6 no-padding-left no-padding-right">
                                                                                                                        <div class="col-sm-12">
                                                                                                                            <div class="well well-lg">
                                                                                                                                <div class="profile-user-info profile-user-info-striped">
                                                                                                                                    <div class="profile-info-row">
                                                                                                                                        <address>
                                                                                                                                            <strong>Nombre:</strong>
                                                                                                                                            <div class="profile-info-value">
                                                                                                                                                <span>{{ autor.nombre }}</span>
                                                                                                                                            </div>
                                                                                                                                        </address>
                                                                                                                                    </div>

                                                                                                                                    <div class="profile-info-row">
                                                                                                                                        <address>
                                                                                                                                            <strong>Apellidos:</strong>
                                                                                                                                            <div class="profile-info-value">
                                                                                                                                                <span>{{ autor.apellidos}}</span>
                                                                                                                                            </div>
                                                                                                                                        </address>
                                                                                                                                    </div>

                                                                                                                                    <div class="profile-info-row">
                                                                                                                                        <address>
                                                                                                                                            <strong>Correo:</strong>
                                                                                                                                            <div class="profile-info-value">
                                                                                                                                                <span>{{ autor.correo }}</span>
                                                                                                                                            </div>
                                                                                                                                        </address>
                                                                                                                                    </div>

                                                                                                                                    <div class="profile-info-row">
                                                                                                                                        <address>
                                                                                                                                            <strong>Pais:</strong>
                                                                                                                                            <div class="profile-info-value">
                                                                                                                                                <span>{{ autor.pais.pais }}</span>
                                                                                                                                            </div>
                                                                                                                                        </address>
                                                                                                                                    </div>

                                                                                                                                    <div class="profile-info-row">
                                                                                                                                        <address>
                                                                                                                                            <strong>Tipo de Autor:</strong>
                                                                                                                                            <div class="profile-info-value">
                                                                                                                                                <span>{{ autor.tipoAutor.tipoAutor }}</span>
                                                                                                                                            </div>
                                                                                                                                        </address>
                                                                                                                                    </div>

                                                                                                                                    <div class="profile-info-row">
                                                                                                                                        <address>
                                                                                                                                            <strong>Institución:</strong>
                                                                                                                                            <div class="profile-info-value">
                                                                                                                                                <span>{{ autor.institucion }}</span>
                                                                                                                                            </div>
                                                                                                                                        </address>
                                                                                                                                    </div>
                                                                                                                                </div>
                                                                                                                            </div>

                                                                                                                        </div><!-- /.col -->
                                                                                                                    </div>

                                                                                                                </div>

                                                                                                            </div>
                                                                                                        </div>
                                                                                                    {% endfor %}

                                                                                                </div>
                                                                                            </div>
                                                                                        </div>
                                                                                    {% endif %}
                                                                                {% endif %}

                                                                            {% endfor %}
                                                                        </li>
                                                                        <hr>

                                                                    </ul>
                                                                </div>
                                                            </div>
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>



                            {% endif %}


                        {% endif %}

                    {% endif %}
                {% endfor %}
            </div>


        {% endfor %}
    </div>
    </div>

    </div>
    </form>
    </div>
    </div>





{% endblock %}
