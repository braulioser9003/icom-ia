{% extends 'plantillas/principal.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <!-- Fonts START -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|PT+Sans+Narrow|Source+Sans+Pro:200,300,400,600,700,900&amp;subset=all"
          rel="stylesheet" type="text/css">
    <!-- Fonts END -->
    <link href="{{ asset('bundles/fcomicom/metronic/assets/global/plugins/bootstrap/css/bootstrap.min.css') }}"
          rel="stylesheet">



    <!-- Page level plugin styles START -->
    <link href="{{ asset('bundles/fcomicom/metronic/assets/global/plugins/fancybox/source/jquery.fancybox.css') }}"
          rel="stylesheet">
    <link href="{{ asset('bundles/fcomicom/metronic/assets/global/plugins/uniform/css/uniform.default.css') }}"
          rel="stylesheet" type="text/css">
    <!-- Page level plugin styles END -->

    <!-- Theme styles START -->
    <link href="{{ asset('bundles/fcomicom/metronic/assets/global/css/components.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/fcomicom/metronic/assets/frontend/layout/css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/fcomicom/metronic/assets/frontend/layout/css/style-responsive.css') }}"
          rel="stylesheet">
    <link href="{{ asset('bundles/fcomicom/metronic/assets/frontend/layout/css/themes/blue.css') }}" rel="stylesheet"
          id="style-color">

    <link href="{{ asset('bundles/fcomicom/metronic/assets/frontend/layout/css/custom.css') }}" rel="stylesheet">
    <!-- Theme styles END -->
{% endblock %}

{% block contenido %}

    <div class="container" id="content-contain">
        <!-- BEGIN SIDEBAR & CONTENT -->
        <div class="row margin-bottom-40">
            <!-- BEGIN SIDEBAR -->

            <!-- END SIDEBAR -->

            <!-- BEGIN CONTENT -->
            <div class="col-md-12 col-sm-12">
                {% if error %}
                    <div class="alert alert-block alert-danger fade in">
                        <button class="close" type="button" data-dismiss="alert"></button>
                        <h4 class="alert-heading">Error!</h4>
                        <p> {{ error.messageKey }} </p>
                    </div>
                {% endif %}


                <div class="content-form-page">

                    <div class="row">
                        <div class="col-md-7 col-sm-7">
                            <form class="form-horizontal form-without-legend" role="form"
                                  action="{{ path('fcom_icom_login_check') }}" method="post">


                                <div class="form-group">
                                    <label for="email" class="col-lg-4 control-label">Usuario <span
                                                class="require">*</span></label>

                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="username" name="_username" value="{{ ultimoUsuario }}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="col-lg-4 control-label">Contraseña <span
                                                class="require">*</span></label>
                                    <input type="hidden" name="_target_path" value="fcom_icom_homepage">

                                    <div class="col-lg-8">
                                        <input type="password" class="form-control" id="password" name="_password">
                                    </div>
                                </div>
                                <!--<div class="row">
                                  <div class="col-lg-8 col-md-offset-4 padding-left-0">
                                    <a href="page-forgotton-password.html">Forget Password?</a>
                                  </div>
                                </div>-->
                                <div class="row">
                                    <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-20">
                                        <button type="submit" class="btn btn-primary">Iniciar sessión</button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-10 padding-right-30">
                                        <hr>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-4 col-sm-4 pull-right">
                            <div class="form-info">
                                <h2><em>Información</em> Importante </h2>

                                <p>Debe de registrarse al sitio para poder subir su ponencia</p>

                                <a href="{{ path('usuario_new') }}" class="btn blue-madison"><i class="fa fa-user"></i>Crear Cuenta</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END CONTENT -->

            <!-- END SIDEBAR & CONTENT -->
        </div>
    </div>


{% endblock %}