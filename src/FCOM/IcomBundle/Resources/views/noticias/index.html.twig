{% extends 'plantillas/principal.html.twig' %}

{% block contenido %}
    {{ parent() }}
    {{ include('plantillas/tabla.html.twig')  }}
    <div class="container" id="content-contain">
    <div class="row">
    <div class="col-xs-12">
    <div class="row">
        <div class="col-xs-12">
            <div class="page-header" style="margin-top: 2%;">
                <h1>
                    Noticias
                </h1>
            </div><!-- /.page-header -->

            <div class="clearfix">
                <div class="pull-right tableTools-container"></div>
            </div>
            <div class="table-header">
                Ultima Noticias Registrada
            </div>

            <!-- div.table-responsive -->

            <!-- div.dataTables_borderWrap -->




            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th class="sorting_disabled center">
                            <label class="pos-rel">
                                <input type="checkbox" class="ace" />
                                <span class="lbl"></span>
                            </label>
                        </th>
                        <th>Id</th>
                        <th>Titulo</th>
                        <th class="hidden-480">Resumen</th>

                        <th>Contenido</th>
                        <th class="sorting_disabled"></th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for noticia in noticias %}
                        <tr>
                            <td class="center">
                                <label class="pos-rel">
                                    <input type="checkbox" class="ace" />
                                    <span class="lbl"></span>
                                </label>
                            </td>

                            <td><a href="{{ path('noticias_mostrar', { 'id': noticia.id }) }}">{{ noticia.id }}</a></td>
                            <td>{{ noticia.titulo }}</td>
                            <td >{{ noticia.resumen }}</td>


                            <td class="hidden-480">
                                <span >{{ noticia.contenido |raw }}</span>
                            </td>

                            <td>
                                <div class="hidden-sm hidden-xs action-buttons">

                                    <a class="green" href="{{ path('noticias_editar', { 'id': noticia.id }) }}">
                                        <i class="ace-icon fa fa-pencil bigger-130"></i>
                                    </a>

                                    <a class="" href="{{ path('noticias_eliminar', {'id': noticia.id}) }}">
                                        <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                    </a>
                                </div>


                                </div>
                            </td>
                        </tr>
                    {% endfor %}


                    </tbody>
                </table>
            </div>
        </div>
    </div>



    <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
    </div><!-- /.row -->

    </div>

{% endblock %}
