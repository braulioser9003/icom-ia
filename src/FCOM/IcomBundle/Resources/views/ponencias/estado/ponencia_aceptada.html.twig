{% extends 'plantillas/principal.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
<link href="{{ asset('bundles/fcomicom/metronic/assets/admin/pages/css/timeline-old.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block contenido %}
    {{ parent() }}
    {{ include('plantillas/formularios.html.twig') }}
    {{ include('plantillas/formularios-wizard.html.twig') }}

    <div class="page-content">



    <!-- /.page-header -->

    <div class="row">
    <div class="col-xs-12">
    <!-- PAGE CONTENT BEGINS -->


    <div class="hr hr-18 hr-double dotted"></div>

    <div class="widget-box">


    <div class="widget-body">
    <div class="wizard-actions">
        <button class="btn btn-prev">
            <i class="ace-icon fa fa-arrow-left"></i>
            Atras
        </button>
        <button type="submit" class="btn btn-success btn-next" data-last="Guardar">
            Siguiente
            <i class="ace-icon fa fa-arrow-right icon-on-right"></i>
        </button>
    </div>
    <hr>
    <div class="widget-main">
    <div id="fuelux-wizard-container">
    <div>
        <ul class="steps">

            <li data-step="1" >
                <span class="step">5</span>
                <span class="title">Ponencia Aceptada</span>
            </li>
            <li data-step="2" class="active">
                <span class="step">6</span>
                <span class="title">Programa</span>
            </li>
        </ul>
    </div>

    <hr/>

    <div class="step-content pos-rel">



    <div class="step-pane" data-step="1">
    <div class="step-pane" data-step="2">
        <div class="row">
            <div class="col-md-12">
                <ul class="timeline ">

                        <li class="timeline-blue timeline-noline">
                            <div class="timeline-time timeline-noline">
								<span class="date">
								4/10/13 </span>
                                <h2>
                                    {{ ponencias.horaInicio|date('H:i') }} - {{ ponencias.horaFinal|date('H:i') }} </h2>


                                <h1>
                                </h1>

                            </div>
                            <div class="timeline-icon">
                                <i class="icon-calendar  "></i>
                            </div>
                            <div class="timeline-body">



                                <div class="portlet  light bg-inverse ">
                                    <div class="portlet-title">
                                        <div class="caption col-md-0">
                                            <i class="icon-docs font-blue-hoki" style="font-size: 25px;"></i>
                                        </div>
                                        <div class="caption col-md-10">
                                            <p class="lead font-blue-madison">
                                                {{ ponencias.titulo }}
                                            </p>

                                        </div>
                                        <div class="tools">
                                            <a href="" class="collapse">
                                            </a>
                                            <a href="#portlet-config" data-toggle="modal" class="config">
                                            </a>
                                            <a href="" class="reload">
                                            </a>
                                            <a href="" class="fullscreen">
                                            </a>
                                            <a href="" class="remove">
                                            </a>
                                        </div>
                                    </div>
                                    <div class="portlet-body">


                                        {% for autor in ponencias.autor %}
                                            <div class="portlet">
                                                <div class="portlet-title">
                                                    <div class="caption">
                                                        <i class="ace-icon glyphicon glyphicon-user" data-icon-show="fa-plus" data-icon-hide="fa-minus" style="font-size: 25px; color: #49586A; margin: 10px 5px -13px  0;"></i>
                                                        <h4 class="widget-title lighter col-md-12" style="margin: 0 0 0 20px;">{{ autor.nombre }} {{ autor.apellidos }}</h4>
                                                    </div>
                                                    <div class="tools">
                                                        <a href="javascript:;" class="expand">
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="portlet-body display-hide">
                                                    <div class="row">
                                                        <div class="widget-main padding-6 no-padding-left no-padding-right">
                                                            <div class="col-sm-12">
                                                                <div class="well well-lg">
                                                                    <div class="profile-user-info profile-user-info-striped">
                                                                        <div class="profile-info-row">
                                                                            <address>
                                                                                <strong>Nombre:</strong>
                                                                                <div class="profile-info-value">
                                                                                    <span>{{ autor.nombre }}</span>
                                                                                </div>
                                                                            </address>
                                                                        </div>

                                                                        <div class="profile-info-row">
                                                                            <address>
                                                                                <strong>Apellidos:</strong>
                                                                                <div class="profile-info-value">
                                                                                    <span>{{ autor.apellidos}}</span>
                                                                                </div>
                                                                            </address>
                                                                        </div>

                                                                        <div class="profile-info-row">
                                                                            <address>
                                                                                <strong>Correo:</strong>
                                                                                <div class="profile-info-value">
                                                                                    <span>{{ autor.correo }}</span>
                                                                                </div>
                                                                            </address>
                                                                        </div>

                                                                        <div class="profile-info-row">
                                                                            <address>
                                                                                <strong>Pais:</strong>
                                                                                <div class="profile-info-value">
                                                                                    <span>{{ autor.pais.pais }}</span>
                                                                                </div>
                                                                            </address>
                                                                        </div>

                                                                        <div class="profile-info-row">
                                                                            <address>
                                                                                <strong>Tipo de Autor:</strong>
                                                                                <div class="profile-info-value">
                                                                                    <span>{{ autor.tipoAutor.tipoAutor }}</span>
                                                                                </div>
                                                                            </address>
                                                                        </div>

                                                                        <div class="profile-info-row">
                                                                            <address>
                                                                                <strong>Instituci√≥n:</strong>
                                                                                <div class="profile-info-value">
                                                                                    <span>{{ autor.institucion }}</span>
                                                                                </div>
                                                                            </address>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                            </div><!-- /.col -->
                                                        </div>

                                                    </div>

                                                </div>
                                            </div>
                                        {% endfor %}
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </li>



                </ul>
            </div>
        </div>

    </div>
    </div>
    </div>

    <hr/>

    </div>
    <!-- /.widget-main -->
    </div>
    <!-- /.widget-body -->
    </div>


    <!-- PAGE CONTENT ENDS -->
    </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->
    </div>


{% endblock %}