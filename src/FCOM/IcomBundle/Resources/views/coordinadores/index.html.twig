            </div>
            <!--/row-->



            <!--/row-->
        </div>
        <div class="form-actions">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="hidden" name="duracion" value="1">
                            <input type="hidden" name="asignacion" value="0">

                            {{ form_widget(form.save, {'label' : 'Guardar', 'attr' : {'class' : 'btn green' }}) }}
