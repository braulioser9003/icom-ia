                            ) }}

                            <span class="text-danger" style="float: left;">{{ form_errors(form.apellidos) }}</span>


                        </div>
                    </div>
                </div>



                    <!--/span-->

                <!--/span-->
            </div>
            <!--/row-->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">Temática</label>

                        <div class="col-md-5">
                            <div class="input-group">
                                {{ form_widget(form.tematica, {'attr' : {'class' : 'form-control', 'id' : 'gradoCientifico', 'name' : 'tematica' }}
                                ) }}

                                <span class="text-danger" style="float: left;">{{ form_errors(form.tematica) }}</span>

                            </div>
                        </div>

                        <div class="input-group">

                        </div>
                    </div>
                </div><!--/span-->
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">Grado Científico</label>

                        <div class="col-md-5">
                            <div class="input-group">
                                {{ form_widget(form.gradoCientifico, {'attr' : {'class' : 'form-control', 'id' : 'gradoCientifico', 'name' : 'gradoCientifico' }}
                                ) }}

                                <span class="text-danger" style="float: left;">{{ form_errors(form.gradoCientifico) }}</span>

