            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">Nombre</label>
                        <div class="col-md-7">
                            {{ form_widget(form.nombre, {'attr' : {'class' : 'form-control', 'id' : 'nombre', 'name' : 'Nombre' }}
