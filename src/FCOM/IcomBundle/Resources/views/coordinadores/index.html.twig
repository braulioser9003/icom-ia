    </div>
</div>
<hr>
<div class="row">

<div class="col-md-12 ">
    <!-- BEGIN Portlet PORTLET-->

</div>
<hr>

<table class="table table-striped table-bordered table-hover" id="sample_1" width="700px">
    <thead>
    <tr>
        <th>
            {{ knp_pagination_sortable(pagination, 'Nombre', 's.nombre' ) }}
        </th>
        <th>
            Apellidos
        </th>
        <th>
            Grado Científico
        </th>
        <th>
            Temática
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    {% for coor in pagination %}
        <tr class="odd gradeX">

            <td>
                {{ coor.nombre }}
            </td>
            <td>
                {{ coor.apellidos }}
            </td>
            <td>
                {{ coor.gradoCientifico }}
            </td>
            <td class="col-md-6">
                {% if coor.tematica != null %}
                {{ coor.tematica.tematica }}
                {% endif %}
            </td>
            <td width="130px">

                <a href="#myModal1{{ coor.id }}" role="button" class="btn btn-xs btn-info" data-toggle="modal">
                    <i class="ace-icon fa fa-pencil bigger-120"></i> </a>

                <a href="#myModal2{{ coor.id }}" role="button" class="btn red" data-toggle="modal">
                    <i class="ace-icon fa fa-trash-o bigger-120"></i> </a>


                <div id="myModal1{{ coor.id }}" class="modal fade" role="dialog" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                <h4 class="modal-title">Actualizar Salas</h4>
                            </div>
                            <form action="{{ path('coordinadores_edit', { 'id': coor.id}) }}" method="post" class="form-horizontal form-row-seperated" novalidate="novalidate">
                                <div class="modal-body form">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Nombre</label>
                                        <div class="col-sm-4">
                                            <div class="input-group">
                                                <input type="text" name="nombre" class="form-control" id="nombre" value="{{ coor.nombre}}">

                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-group" >
                                        <label class="col-sm-4 control-label">Apellidos</label>
                                        <div class="col-sm-4">
                                            <div class="input-group">
                                                <input type="text" name="apellidos" class="form-control" id="apellidos" value="{{ coor.apellidos}}">
                                            <span class="input-group-btn">
												<button class="btn default" type="button"><i class="fa fa-clock-o"></i></button>
												</span>

                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group" >
                                        <label class="col-sm-4 control-label">Grado Científico</label>
                                        <div class="col-sm-4">
                                            <div class="input-group">
                                                <input type="text" name="gradoCientifico" class="form-control" id="apellidos" value="{{ coor.gradoCientifico}}">

                                            <span class="input-group-btn">
												<button class="btn default" type="button"><i class="fa fa-clock-o"></i></button>
												</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group" >
                                        <label class="col-sm-4 control-label">Temática</label>
                                        <div class="col-sm-4">
                                            <div class="input-group">
                                                <select class="form-control" name="tematica">
                                                    <option value="" name="tematica"></option>
                                                    {% for tema in tematica %}
                                                    <option value="{{ tema.id }}" name="tematica">{{ tema.tematica }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="modal-footer">

                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                                    <button type="submit" class="btn btn-xs btn-info"><i class="ace-icon fa fa-pencil bigger-120"></i> Guardar</button>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div id="myModal2{{ coor.id }}" class="modal fade" role="dialog" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                <h4 class="modal-title">Esta seguro que desea eliminar el coordinador: <b class="text-primary"> {{ coor.nombre }} </b></h4>

                            </div>
                            <form action="{{ path('coordinadores_delete', { 'id': coor.id}) }}" method="post"
                                  id="estado">

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">NO</button>
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i>SI</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>

            </td>
        </tr>
    {% endfor %}




    </tbody>
</table>
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>







{% endblock %}
