{% block contenido %}

    <div class="page-container">
    <!-- BEGIN PAGE HEAD -->
    <div class="page-head">
        <div class="container">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>Perfil de Usuario
                </h1>
            </div>
            <!-- END PAGE TITLE -->
            <!-- BEGIN PAGE TOOLBAR -->

            <!-- END PAGE TOOLBAR -->
        </div>
    </div>
    <!-- END PAGE HEAD -->
    <!-- BEGIN PAGE CONTENT -->
    <div class="page-content">
    <div class="container">

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row margin-top-10">
    <div class="col-md-12">
    <!-- BEGIN PROFILE SIDEBAR -->
    <div class="profile-sidebar" style="width: 250px;">
        <!-- PORTLET MAIN -->
        <div class="portlet light profile-sidebar-portlet">
            <!-- SIDEBAR USERPIC -->
            <div class="profile-userpic">
                <img src="{{ asset('') }}assets/admin/pages/media/profile/profile_user.jpg" class="img-responsive"
                     alt="">
            </div>
            <!-- END SIDEBAR USERPIC -->
            <!-- SIDEBAR USER TITLE -->
            <div class="profile-usertitle">
                <div class="profile-usertitle-name">

                        {{ usuario.nombre }}


                </div>
                <div class="profile-usertitle-job">
                    {{ usuario.role }}


                </div>
            </div>
            <!-- END SIDEBAR USER TITLE -->
            <!-- SIDEBAR BUTTONS -->

            <!-- END SIDEBAR BUTTONS -->
            <!-- SIDEBAR MENU -->
            <div class="profile-usermenu">
                <ul class="nav">
                    <li >
                        <a href="{{ path('fcom_icom_homepage') }}">
                            <i class="icon-home"></i>
                            Perfil </a>
                    </li>
                    <li class="active">
                        <a href="extra_profile_account.html">
                            <i class="icon-settings"></i>
                            Personalizar Cuenta </a>
                    </li>
                </ul>
            </div>
            <!-- END MENU -->
        </div>
        <!-- END PORTLET MAIN -->
        <!-- PORTLET MAIN -->

        <!-- END PORTLET MAIN -->
    </div>
    <!-- END BEGIN PROFILE SIDEBAR -->
    <!-- BEGIN PROFILE CONTENT -->
    <div class="profile-content">
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light">
                    <div class="portlet-title tabbable-line">
                        <div class="caption caption-md">
                            <i class="icon-globe theme-font hide"></i>
                            <span class="caption-subject font-blue-madison bold uppercase"></span>
                        </div>
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#tab_1_1" data-toggle="tab">Información Personal</a>
                            </li>
                            <li>
                                <a href="#tab_1_3" data-toggle="tab">Cambiar Contraseña</a>
                            </li>

                        </ul>
                    </div>
                    <div class="portlet-body">
                        {% for flash_message in app.session.flashBag.get('validacion') %}
                            <div class="alert alert-danger">
                                <strong>Error!</strong> {{ flash_message }}
                            </div>

                        {% endfor %}
                        {% for flash_message in app.session.flashBag.get('confirmacion') %}
                            <div class="alert alert-success">
                                <strong>Correcto!</strong> {{ flash_message }}
                            </div>

                        {% endfor %}

                        <div class="tab-content">
                            <!-- PERSONAL INFO TAB -->
                            <div class="tab-pane  active" id="tab_1_1">
                                {{ form_start(form, {'attr' : {'enctype' : 'multipart/form-data','novalidate': 'novalidate', 'role' : 'form', 'class' : 'form-horizontal' }}
                                ) }}

                                <fieldset>
                                    <legend>Datos Personales</legend>

                                    <div class="form-group ">
                                        <label for="firstname" class="col-lg-4 control-label">Usuario <span class="require">*</span></label>
                                        <div class="col-lg-8 has-error" >
                                            {{ form_widget(form.username, {'attr' : {'class' : 'form-control', 'id' : 'username', 'name' : 'username' }}
                                            ) }}
                                            <span  class="help-block">{{ form_errors(form.username) }} .</span>
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label for="lastname" class="col-lg-4 control-label">Nombre <span class="require">*</span></label>
                                        <div class="col-lg-8 has-error">
                                            {{ form_widget(form.nombre, {'attr' : {'class' : 'form-control', 'id' : 'nombre', 'name' : 'nombre' }}
                                            ) }}
                                            <span  class="help-block">{{ form_errors(form.nombre) }} .</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="email" class="col-lg-4 control-label">Apellidos <span class="require">*</span></label>
                                        <div class="col-lg-8 has-error">
                                            {{ form_widget(form.apellidos, {'attr' : {'class' : 'form-control', 'id' : 'apellidos', 'name' : 'apellidos' }}
                                            ) }}
                                            <span  class="help-block">{{ form_errors(form.apellidos) }} .</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="email" class="col-lg-4 control-label">Correo <span class="require">*</span></label>
                                        <div class="col-lg-8 has-error">
                                            {{ form_widget(form.email, {'attr' : {'class' : 'form-control', 'id' : 'email', 'name' : 'email' }}
                                            ) }}
                                            <span  class="help-block">{{ form_errors(form.email) }} .</span>
                                        </div>
                                    </div>
                                </fieldset>
                                <fieldset style="display: none;" >
                                    <legend>Tu contraseña</legend>
                                    <div class="form-group">
                                        <label for="password" class="col-lg-4 control-label">Contraseña<span class="require">*</span></label>

                                        <div class="col-lg-8 has-error">
                                            {{ form_widget(form.password.first, {'attr' : {'class' : 'form-control', 'id' : 'password', 'name' : 'password', 'value' :  usuario.password }}
                                            ) }}
                                            <span  class="help-block">{{ form_errors(form.password.first) }} .</span>

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="password" class="col-lg-4 control-label">Confirmar contraseña<span class="require">*</span></label>
                                        <div class="col-lg-8 has-error">
                                            {{ form_widget(form.password.second, {'attr' : {'class' : 'form-control', 'id' : 'password', 'name' : 'password', 'value' :  usuario.password  }}
                                            ) }}
                                            <span  class="help-block">{{ form_errors(form.password.second) }} .</span>
                                        </div>
                                    </div>


                                </fieldset>
                                <div class="row">
                                    <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-20">
                                        <input type="hidden" name="role" value="ROLE_USUARIO">
                                        <button type="submit" class="btn btn-primary">Editar Cuenta</button>
                                        <button type="button" class="btn btn-default">Cancel</button>
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </div>
                            <!-- END PERSONAL INFO TAB -->
                            <!-- CHANGE AVATAR TAB -->

                            <!-- END CHANGE AVATAR TAB -->
                            <!-- CHANGE PASSWORD TAB -->
                            <div class="tab-pane " id="tab_1_3">
                                <form action="{{ path('usuario_cambiar_contraseña') }}" method="post">
                                    <div class="form-group">
                                        <label class="control-label">Contraseña Actual</label>
                                        <input type="password" class="form-control" name="contraseñaActual"/>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Nueva Contraseña</label>
                                        <input type="password" class="form-control" name="nuevaContraseña"/>

                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Repetir Nueva Contraseña</label>
                                        <input type="password" class="form-control" name="repetirNuevaContraseña"/>
                                    </div>
                                    {% for flash_message in app.session.flashBag.get('validacion') %}
                                        <div class="flash-validacion">
                                            {{ flash_message }}
                                        </div>
                                    {% endfor %}
                                    <div class="margin-top-10">
                                        <input type="submit" name="save" class="btn green-haze">

                                        <a href="#" class="btn default">
                                            Cancelar </a>
                                    </div>
                                </form>
                            </div>
                            <!-- END CHANGE PASSWORD TAB -->
                            <!-- PRIVACY SETTINGS TAB -->

                            <!-- END PRIVACY SETTINGS TAB -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END PROFILE CONTENT -->
    </div>
    </div>
    <!-- END PAGE CONTENT INNER -->
    </div>
    </div>
    <!-- END PAGE CONTENT -->
    </div>
{% endblock %}

